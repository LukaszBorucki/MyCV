<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="co.borucki.mycv.view.SplashActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/splash_activity_circle_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/splash_activity_name_and_surname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/name_and_surname"
        android:textColor="@color/primary_text"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/splash_activity_phone_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:text="@string/phone_no"
        android:textColor="@color/primary_text"
        android:textSize="30sp" />
</RelativeLayout>
